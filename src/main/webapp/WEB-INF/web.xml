<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <display-name>V2IAC1-14 sample application</display-name>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>nl.hu.v2iac1.login.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PublicServlet</servlet-name>
        <servlet-class>nl.hu.v2iac1.secretpages.PublicServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SecretServlet</servlet-name>
        <servlet-class>nl.hu.v2iac1.secretpages.SecretServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VerysecretServlet</servlet-name>
        <servlet-class>nl.hu.v2iac1.secretpages.VerysecretServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TopsecretServlet</servlet-name>
        <servlet-class>nl.hu.v2iac1.secretpages.TopsecretServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TwostepServlet</servlet-name>
        <servlet-class>nl.hu.v2iac1.login.TwostepServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PublicServlet</servlet-name>
        <url-pattern>/public</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SecretServlet</servlet-name>
        <url-pattern>/secret</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VerysecretServlet</servlet-name>
        <url-pattern>/verysecret</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TopsecretServlet</servlet-name>
        <url-pattern>/topsecret</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TwostepServlet</servlet-name>
        <url-pattern>/twostep</url-pattern>
    </servlet-mapping>
</web-app>
